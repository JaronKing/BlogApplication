<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Blog Admin Panel</title>
    {% stylesheets
    'bundles/blogadmin/sb-admin-2/bower_components/bootstrap/dist/css/bootstrap.min.css'
    'bundles/blogadmin/sb-admin-2/bower_components/metisMenu/dist/metisMenu.min.css'
    'bundles/blogadmin/sb-admin-2/dist/css/timeline.css'
    'bundles/blogadmin/sb-admin-2/dist/css/sb-admin-2.css'
    'bundles/blogadmin/sb-admin-2/bower_components/morrisjs/morris.css'
    'bundles/blogadmin/sb-admin-2/bower_components/font-awesome/css/font-awesome.min.css'
    filter='cssrewrite'
    output='assets/css/compiled/main.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    {#<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>#}
    {% block stylesheets %}
    {% endblock stylesheets %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('blog_admin_homepage') }}">Blog</a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="{{ path('admin.logout') }}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
            <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="{{ path('blog_admin_homepage') }}"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="{{ path('post') }}">
                            <i class="fa fa-file-o fa-fw"></i>
                            Posts
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('tag') }}">
                            <i class="fa fa-archive fa-fw"></i>
                            Tags
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('message') }}">
                            <i class="fa fa-envelope-o fa-fw"></i>
                            Messages
                        </a>
                    <li>
                        <a href="#"><i class="fa fa-wrench fa-fw"></i> Settings<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="{{ path('admin_user') }}">
                                    <i class="fa fa-users"></i>
                                    Users
                                </a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ title }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
{% javascripts
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/jquery/dist/jquery.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/bootstrap/dist/js/bootstrap.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/metisMenu/dist/metisMenu.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/raphael/raphael-min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/morrisjs/morris.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/dist/js/sb-admin-2.js'
output='assets/js/compiled/main.js'
%}
<script async type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% block javascripts %}
    <script type="text/javascript"></script>
{% endblock javascripts %}

</body>

</html>
