{% extends '::adminBase.html.twig' %}
{% set title = 'Messages' %}
{% set panel = 1 %}
{% block body -%}
    <table class="table table-striped table-bordered table-hover records_list" id="dataTables">
        <thead>
            <tr>
                <th style="width: 70px;">Id</th>
                <th>Post</th>
                <th>Message</th>
                <th style="width: 170px;">Datecreated</th>
                <th style="width: 100px;">Createdby</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('message_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.post.title }}</td>
                <td>{{ entity.message|slice(0,25) }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.createdBy.username }}</td>
                <td>
                    <a href="{{ path('message_show', { 'id': entity.id }) }}" type="button" class="btn btn-default ">show</a>
                    <a href="{{ path('message_edit', { 'id': entity.id }) }}" type="button" class="btn btn-default ">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('message_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
