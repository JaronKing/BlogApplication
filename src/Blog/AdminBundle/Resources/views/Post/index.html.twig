{% extends '::adminBase.html.twig' %}
{% set title = 'Posts' %}
{% set panel = 1 %}
{% block body -%}
    <table class="table table-striped table-bordered table-hover records_list" id="dataTables">
        <thead>
            <tr>
                <th style="width: 70px;">Id</th>
                <th>Title</th>
                <th style="width: 100px;">Datecreated</th>
                <th style="width: 100px;">Createdby</th>
                <th style="width: 100px;">Lastedited</th>
                <th style="width: 100px;">Enabled</th>
                <th style="width: 100px;">Deleted</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.createdBy }}</td>
                <td>{% if entity.lastEdited %}{{ entity.lastEdited|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.enabled }}</td>
                <td>{{ entity.deleted }}</td>
                <td>
                    <a href="{{ path('post_show', { 'id': entity.id }) }}" type="button" class="btn btn-default">show</a>
                    <a href="{{ path('post_edit', { 'id': entity.id }) }}" type="button" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
