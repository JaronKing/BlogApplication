<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Bootstrap Admin Theme</title>

    {% stylesheets
    'bundles/blogadmin/sb-admin-2/bower_components/bootstrap/dist/css/bootstrap.min.css'
    'bundles/blogadmin/sb-admin-2/bower_components/metisMenu/dist/metisMenu.min.css'
    'bundles/blogadmin/sb-admin-2/dist/css/timeline.css'
    'bundles/blogadmin/sb-admin-2/dist/css/sb-admin-2.css'
    'bundles/blogadmin/sb-admin-2/bower_components/morrisjs/morris.css'
    'bundles/blogadmin/sb-admin-2/bower_components/font-awesome/css/font-awesome.min.css'
    filter='cssrewrite'
    output='assets/css/compiled/main.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    {#<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>#}
    {% block stylesheets %}
    {% endblock stylesheets %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
            <form action="{{ path("admin.login_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <fieldset>
                    <div class="form-group">
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="form-control"  name="_password" required="required" />
                    </div>
                    <input type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </fieldset>
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% javascripts
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/jquery/dist/jquery.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/bootstrap/dist/js/bootstrap.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/metisMenu/dist/metisMenu.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/raphael/raphael-min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/bower_components/morrisjs/morris.min.js'
'@BlogAdminBundle/Resources/public/sb-admin-2/dist/js/sb-admin-2.js'
output='assets/js/compiled/main.js'
%}
<script async type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% block javascripts %}
    <script type="text/javascript"></script>
{% endblock javascripts %}

</body>

</html>
