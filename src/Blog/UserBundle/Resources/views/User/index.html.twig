{% extends '::adminBase.html.twig' %}
{% set title = 'Users' %}
{% set panel = 1 %}
{% block body -%}
    <table class="table table-striped table-bordered table-hover records_list" id="dataTables">
        <thead>
            <tr>
                <th style="width: 70px;">Id</th>
                <th>Username</th>
                <th style="width: 120px;">Last login</th>
                <th style="width: 170px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.lastlogin|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('admin_user_show', { 'id': entity.id }) }}" type="button" class="btn btn-default">show</a>
                    <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}" type="button" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('admin_user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
